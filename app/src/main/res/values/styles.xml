<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_main</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/White</item>

    </style>
    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/bot_bar</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/app_main</item>
        <item name="android:textSize">11.5sp</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/app_main</item>
    </style>
    <style name="SwitchCompatStyle" >

        <!--    <item name="thumbTint">@color/blue_introduce</item>
            <item name="trackTint">@color/Silver</item>-->
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/blue_introduce</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/Gray</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/Silver</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/Gray</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/Black</item>
        <item name="colorControlNormal">@color/Orange</item>
        <item name="colorControlActivated">@color/Blue</item>
    </style>
    <style name="TextLabeTextInput" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/Gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/Gray</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/app_main</item>
        <item name="colorControlNormal">@color/app_main</item>
        <item name="colorControlActivated">@color/app_main</item>
    </style>
</resources>
