                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.09" />

                    <TextView
                        android:id="@+id/txt_phome_host"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/txt_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ic_detail_room_3"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/app_main" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_marginBottom="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/dp2"
                    android:text="tiện nghi"
                    android:textAllCaps="true"
                    android:textColor="@color/app_main"
                    android:textSize="@dimen/txt_18sp"
                    android:textStyle="bold"
