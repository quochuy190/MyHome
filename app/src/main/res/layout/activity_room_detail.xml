                    app:layout_constraintEnd_toEndOf="@+id/txt_price_week_discount"
                    app:layout_constraintStart_toStartOf="@+id/txt_price_week_discount"
                    app:layout_constraintTop_toTopOf="@+id/txt_price_week_discount" />

