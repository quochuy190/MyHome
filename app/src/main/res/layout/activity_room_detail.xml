<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/ll_booking"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_booking"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_30"
            android:background="@drawable/spr_btn_login"
            android:text="Đặt phòng"
            android:textColor="@color/White"
            app:layout_constraintTop_toTopOf="@+id/txt_price_total"
            app:layout_constraintBottom_toBottomOf="@id/txt_price_total_discount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.28" />

        <TextView
            android:id="@+id/txt_price_total"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp2"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/Black"
            android:textSize="@dimen/txt_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_price_total_discount"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_price_total_discount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/Gray"
            android:textSize="@dimen/txt_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:background="@color/Gray"
            app:layout_constraintEnd_toEndOf="@+id/txt_price_total_discount"
            app:layout_constraintTop_toTopOf="@+id/txt_price_total_discount"
            app:layout_constraintBottom_toBottomOf="@+id/txt_price_total_discount"
            app:layout_constraintStart_toStartOf="@+id/txt_price_total_discount"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="/đêm"
            android:textColor="@color/Black"
            android:textSize="@dimen/txt_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_price_total"
            app:layout_constraintStart_toEndOf="@+id/txt_price_total"
            app:layout_constraintTop_toTopOf="@+id/txt_price_total" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_booking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_room_avata"
