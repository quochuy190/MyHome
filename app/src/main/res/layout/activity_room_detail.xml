                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/dp2"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_15sp" />

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_detail_room_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_setup_2"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.09" />

                    <TextView
                        android:id="@+id/txt_name_host"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ic_detail_room_1"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_detail_room_2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_setup_4"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.09" />

                    <TextView
                        android:id="@+id/txt_email_host"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:gravity="center_vertical"
