                    app:layout_constraintStart_toEndOf="@+id/txt_price_dondep_title"
                    app:layout_constraintTop_toBottomOf="@id/txt_price_weeked" />

                <TextView
                    android:id="@+id/txt_price_add_guest_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp2"
                    android:singleLine="true"
                    android:text="Phí tăng thêm khách/1 người"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_price_dondep" />

                <TextView
                    android:id="@+id/txt_price_add_guest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical|right"
                    android:padding="@dimen/dp2"
                    android:singleLine="true"

                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_price_add_guest_title"
                    app:layout_constraintTop_toBottomOf="@id/txt_price_dondep" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/app_main"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_price_add_guest" />

                <com.skyhope.showmoretextview.ShowMoreTextView
                    android:id="@+id/txt_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_chitiet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp7"
                android:layout_marginTop="@dimen/dp7"
                android:layout_marginRight="@dimen/dp7"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Chi tiết"
                android:textAllCaps="true"
                android:textColor="@color/app_main"
                android:textSize="@dimen/txt_18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_price" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp7"
                android:background="@drawable/spr_bg_detail_room"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_chitiet_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_view_all_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spr_click_view_tranparent"
                    android:padding="@dimen/dp7">

                    <TextView
                        android:id="@+id/txt_view_all_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_marginBottom="@dimen/dp3"
                        android:ellipsize="end"
                        android:padding="@dimen/dp2"
                        android:singleLine="true"
                        android:text="Hình ảnh chi tiết"
                        android:textColor="@color/app_main"
                        android:textSize="@dimen/txt_18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_right_setup"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_view_all_image"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.8"
                        app:layout_constraintTop_toTopOf="@+id/txt_view_all_image" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_image_face"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="3.5:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_view_all_image">

                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/app_main"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_price_add_guest" />

                <TextView
                    android:id="@+id/txt_infomation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:padding="@dimen/dp5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp7"
                android:src="@drawable/icon_back"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.09" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/txt_commission_phantram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:background="@drawable/spr_price_promotion_ptram"
        android:text="-0%"
        android:textColor="@color/White"
        android:textSize="@dimen/txt_13sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>