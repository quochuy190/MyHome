                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ic_detail_room_2"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout

