                    <TextView
                        android:id="@+id/txt_max_guest_exit_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Số khách tối đa"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_max_guest_exit"
                        app:layout_constraintEnd_toStartOf="@+id/txt_max_guest_exit"
                        app:layout_constraintStart_toEndOf="@+id/ic_max_guest_exit"
                        app:layout_constraintTop_toTopOf="@+id/ic_max_guest_exit" />

                    <TextView
                        android:id="@+id/txt_max_guest_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_max_guest_exit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ic_max_guest_exit" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_detail_room_5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_bed"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.09" />

                    <TextView
                        android:id="@+id/txt_guest_bed_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Số giường"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_5"
                        app:layout_constraintEnd_toStartOf="@+id/txt_bed_max"
                        app:layout_constraintStart_toEndOf="@+id/ic_detail_room_5"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_5" />

                    <TextView
                        android:id="@+id/txt_bed_max"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_detail_room_6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/icon_so_phong"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.09" />

                    <TextView
                        android:id="@+id/txt_guest_room_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Số phòng"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_6"
                        app:layout_constraintEnd_toStartOf="@+id/txt_room_max"
                        app:layout_constraintStart_toEndOf="@+id/ic_detail_room_6"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_6" />

                    <TextView
                        android:id="@+id/txt_room_max"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/txt_15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_detail_room_6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ic_detail_room_6" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_giaphong_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp7"
                android:layout_marginTop="@dimen/dp7"
