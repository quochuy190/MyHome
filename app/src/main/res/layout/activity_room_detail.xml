                android:padding="@dimen/dp7"
                android:text="Giá phòng"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_giaphong_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp7"
                android:background="@drawable/spr_bg_detail_room"
                android:padding="@dimen/dp10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_guild_discount">

                <TextView
                    android:id="@+id/txt_price_thu_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp2"
                    android:singleLine="true"
                    android:text="Thứ 2 - Thứ 5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_price_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
