                    android:text="8.000.000"
                    android:textColor="@color/Silver"
                    android:textSize="@dimen/txt_13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_price_thu"
                    app:layout_constraintEnd_toStartOf="@+id/txt_price_thu"
                    app:layout_constraintTop_toTopOf="@+id/txt_price_thu" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/Silver"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_price_thu_discount"
                    app:layout_constraintEnd_toEndOf="@+id/txt_price_thu_discount"
                    app:layout_constraintStart_toStartOf="@+id/txt_price_thu_discount"
                    app:layout_constraintTop_toTopOf="@+id/txt_price_thu_discount" />

                <TextView
                    android:id="@+id/txt_price_weeked_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
