<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingTop="@dimen/dp15"
    android:paddingBottom="@dimen/dp15"
    android:paddingLeft="@dimen/dp7"
    android:paddingRight="@dimen/dp7"
    android:layout_margin="@dimen/dp5"
    android:background="@drawable/spr_bg_tablayout_new_room"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_madh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mã DH:"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:paddingRight="@dimen/dp7"
        android:paddingLeft="@dimen/dp7"
        android:id="@+id/txt_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/White"
        android:background="@drawable/spr_btn_red"
        android:textSize="@dimen/txt_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_hanhtrinh_"
        app:layout_constraintTop_toBottomOf="@+id/txt_madh"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Hành trình:"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:layout_marginTop="@dimen/dp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp2"
        app:layout_constraintTop_toBottomOf="@+id/txt_madh"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_nguoidat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp2"
        app:layout_constraintTop_toBottomOf="@+id/txt_nguoidat"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_hanhtrinh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp2"
        app:layout_constraintTop_toBottomOf="@+id/txt_nguoidat"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_hanhtrinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp2"
        app:layout_constraintTop_toBottomOf="@+id/txt_nguoidat"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_thoigian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp2"
        android:text="Thời gian đón khách"
        app:layout_constraintTop_toBottomOf="@+id/txt_nguoidat"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_thoigian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp2"
        app:layout_constraintTop_toBottomOf="@+id/txt_thoigian"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_tongtien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp2"
        android:text="Tổng tiền"
        app:layout_constraintTop_toBottomOf="@+id/txt_thoigian"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/txt_tongtien_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp2"
        android:id="@+id/txt_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin khách hàng"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tongtien_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_item_order_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/spr_customer_item_order"
        android:padding="@dimen/dp7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/icon_customer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_login"
            app:layout_constraintBottom_toBottomOf="@+id/icon_phone_customer"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_phone_customer"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/txt_name_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp5"
            android:singleLine="true"

            android:textColor="@color/black"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_customer"
            app:layout_constraintEnd_toEndOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/icon_customer"
            app:layout_constraintTop_toTopOf="@+id/icon_customer" />

        <ImageView
            android:id="@+id/icon_phone_customer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_phone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/txt_phone_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_phone_customer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_phone_customer"
            app:layout_constraintTop_toTopOf="@+id/icon_phone_customer" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:textSize="@dimen/txt_14sp"
        android:id="@+id/btn_duyet_bookcar"
        android:layout_marginTop="@dimen/dp7"
        android:textColor="@color/White"
        android:text="Duyệt đơn"
        android:background="@drawable/spr_btn_orange"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toBottomOf="@+id/ll_item_order_customer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_btn_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>