<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@drawable/spr_dialog_background"
    android:paddingLeft="@dimen/dp30"
    android:paddingRight="@dimen/dp30">

<TextView
    android:layout_gravity="center_horizontal"
    android:textStyle="bold"
    android:textColor="@color/app_main"
    android:textSize="@dimen/txt_17sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Đặt dịch vụ dọn dẹp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/red_money"
        android:textSize="@dimen/txt_13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Vui lòng để lại thông tin chi tiết khách hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <EditText
       android:cursorVisible="true"
       android:textCursorDrawable="@color/black"
       android:imeOptions="actionNext"
       android:inputType="phone"
       android:id="@+id/edt_dialog_phone"
       android:textColorHint="@color/Silver"
       android:textColor="@color/black"
       android:textSize="@dimen/txt_15sp"
       android:hint="- SĐT khách"
       android:layout_marginTop="@dimen/dp7"
       android:background="@drawable/spr_edt_booking"
       android:padding="@dimen/dp10"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <EditText
        android:cursorVisible="true"
        android:textCursorDrawable="@color/black"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:id="@+id/edt_dialog_name"
        android:textColorHint="@color/Silver"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:hint="- Tên khách"
        android:layout_marginTop="@dimen/dp7"
        android:background="@drawable/spr_edt_booking"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:maxLength="2"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/black"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:id="@+id/edt_dialog_number_guest"
        android:textColorHint="@color/Silver"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:hint="- Số lượng khách"
        android:layout_marginTop="@dimen/dp7"
        android:background="@drawable/spr_edt_booking"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText

        android:id="@+id/edt_dialog_time"
        android:textColorHint="@color/Silver"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:hint="- Giờ check-in"
        android:focusable="false"
        android:layout_marginTop="@dimen/dp7"
        android:background="@drawable/spr_edt_booking"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp7"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ghi chú"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:cursorVisible="true"
        android:textCursorDrawable="@color/black"
        android:imeOptions="actionDone"
        android:id="@+id/edt_dialog_note"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minLines="4"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_15sp"
        android:hint="- Số điện thoại khách"
        android:layout_marginTop="@dimen/dp2"
        android:background="@drawable/spr_edt_booking"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/blue_introduce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:id="@+id/txt_exit_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helve"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:text="Huỷ bỏ"
        android:textColor="@color/Red"
        android:textSize="@dimen/txt_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_comfirm_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_marginTop="@dimen/dp3"
        android:layout_marginBottom="@dimen/dp3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/blue_introduce"
        app:layout_constraintBottom_toBottomOf="@id/txt_comfirm_dialog"
        app:layout_constraintStart_toStartOf="@id/txt_comfirm_dialog"
        app:layout_constraintTop_toTopOf="@id/txt_comfirm_dialog" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/txt_comfirm_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helve"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:text="Đồng ý"
        android:textColor="@color/app_main"
        android:textSize="@dimen/txt_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_exit_dialog"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>