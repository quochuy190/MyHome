<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp7"
    android:background="@drawable/spr_bg_tablayout_new_room"
    android:orientation="vertical"
    android:padding="@dimen/dp7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avata"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:src="@drawable/btn_avatar"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <TextView
            android:id="@+id/txt_name_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:padding="@dimen/dp1"

            android:textColor="@color/app_main"
            android:textSize="@dimen/txt_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_cmt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_avata"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_username_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:padding="@dimen/dp1"

            android:textColor="@color/Gray"
            android:textSize="@dimen/txt_16sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_type_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_avata"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_user" />

        <TextView
            android:id="@+id/txt_type_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:padding="@dimen/dp1"

            android:textColor="@color/Gray"
            android:textSize="@dimen/txt_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_avata"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_avata"
            app:layout_constraintTop_toBottomOf="@+id/txt_username_user" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp2"
        android:padding="@dimen/dp1"
        android:text="Số điện thoại:"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_avata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_avata"
        app:layout_constraintTop_toBottomOf="@+id/txt_cmt" />

    <TextView
        android:id="@+id/txt_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp2"
        android:padding="@dimen/dp1"
        android:text="Ngày sinh: "
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_avata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_avata"
        app:layout_constraintTop_toBottomOf="@+id/txt_cmt" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp2"
        android:padding="@dimen/dp1"
        android:text="Email"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_avata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_avata"
        app:layout_constraintTop_toBottomOf="@+id/txt_cmt" />

    <TextView
        android:id="@+id/txt_diachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp2"
        android:padding="@dimen/dp1"
        android:text="Địa chỉ"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_avata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_avata"
        app:layout_constraintTop_toBottomOf="@+id/txt_cmt" />

    <TextView
        android:background="@color/OrangeRed"
        android:text="Đã kích hoạt"
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="@color/White"
        android:textSize="@dimen/txt_14sp" />
</LinearLayout>