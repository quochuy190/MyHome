<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="@dimen/dp5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_update_amenities"
        android:background="@color/Silver"
        android:id="@+id/rcv_list_amenities"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button

        android:id="@+id/btn_update_amenities"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_btn"
        android:layout_marginBottom="8dp"
        android:background="@drawable/spr_btn_login"
        android:text="cập nhật"
        android:textColor="@color/White"
        android:textSize="@dimen/txt_16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_number_bed"
        app:layout_constraintWidth_percent=".75" />

</androidx.constraintlayout.widget.ConstraintLayout>