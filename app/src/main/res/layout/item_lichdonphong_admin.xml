<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:background="@drawable/spr_bg_tablayout_new_room"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp5"
    android:paddingTop="@dimen/dp10"
    android:paddingRight="@dimen/dp5"
    android:paddingBottom="@dimen/dp10">

    <TextView
        android:id="@+id/txt_name_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/app_main"
        android:textSize="@dimen/txt_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_booker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_home" />

    <TextView
        android:id="@+id/txt_time_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_booker" />


    <TextView
        android:id="@+id/txt_time_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time_book" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_margin="@dimen/dp10"
        android:background="@color/app_main" />

    <TextView
        android:id="@+id/txt_update_end_nguoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_create_time_book" />

    <TextView

        android:id="@+id/txt_time_update_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_status_room" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_margin="@dimen/dp10"
        android:background="@color/app_main" />

    <TextView
        android:id="@+id/txt_status_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_status_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1"
        android:singleLine="true"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_15sp"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_trangthainha"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_35"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/spr_btn_blue_status_pay"
            android:text="Trạng thái nhà"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_14sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.47" />

        <Button
            android:id="@+id/btn_update_pay"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn_35"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/spr_btn_blue_status_book"
            android:text="Cập nhật thanh toán"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.47" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>