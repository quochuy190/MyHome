<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_name_room"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_appbar"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            android:padding="@dimen/dp1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_group"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ll_district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabeTextInput"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_phone"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_name_myhome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/White"
                    android:gravity="center_vertical"
                    android:hint="Tên nhà *"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:padding="@dimen/dp5"
                    android:singleLine="true"
                    android:textColor="@color/app_main"
                    android:textColorHint="@color/Silver"
                    android:textCursorDrawable="@color/app_main"
                    android:textSize="@dimen/txt_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_phone"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_city"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_appbar"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_name_room"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/icon_city"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:hintTextAppearance="@style/TextLabeTextInput"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_city"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_city_myhome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/White"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/hide_register_city"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/dp3"
                    android:singleLine="true"
                    android:textColor="@color/app_main"
                    android:textColorHint="@color/Silver"
                    android:textCursorDrawable="@color/app_main"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_city"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.textfield.TextInputLayout>



            <ImageView
                android:id="@+id/icon_get_city"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/dp7"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_tower"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_appbar"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_city"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/icon_tower"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:hintTextAppearance="@style/TextLabeTextInput"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_tower"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_tower_myhome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/White"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/hide_tower"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/dp3"
                    android:singleLine="true"
                    android:textColor="@color/app_main"
                    android:textColorHint="@color/Silver"
                    android:textCursorDrawable="@color/app_main"
                    android:textSize="@dimen/txt_15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_tower"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/icon_get_tower"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/dp7"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_address"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_appbar"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_tower"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/icon_address"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_address_myhome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/White"
                android:gravity="center_vertical"
                android:hint="@string/hide_register_address"
                android:imeOptions="actionNext"
                android:inputType="textCapWords|textMultiLine"
                android:maxLines="2"
                android:padding="@dimen/dp3"
                android:singleLine="true"
                android:textColor="@color/app_main"
                android:textColorHint="@color/Silver"
                android:textCursorDrawable="@color/app_main"
                android:textSize="@dimen/txt_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_address"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_img_cover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            android:padding="@dimen/dp7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_address"
            app:layout_constraintWidth_percent="0.9">

            <TextView
                android:id="@+id/txt_lable_anhdaidien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh đại diện"
                android:textColor="@color/Gray"
                android:textSize="@dimen/txt_15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp7"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_defaul"
                app:layout_constraintDimensionRatio="1.7:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lable_anhdaidien" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_get_image_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp7"
                android:src="@drawable/ic_camera_new"
                android:tint="@color/app_main"
                app:civ_border_color="@color/app_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_list_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            android:padding="@dimen/dp7"
            app:layout_constraintDimensionRatio="2.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_img_cover"
            app:layout_constraintWidth_percent="0.9">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_list_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/edt_sort_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            android:gravity="top"
            android:hint="@string/hide_new_room_sort_des"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:padding="@dimen/dp10"
            android:scrollHorizontally="false"
            android:textColor="@color/txt_app"
            android:textCursorDrawable="@color/txt_app"
            android:textSize="@dimen/txt_16sp"
            android:visibility="visible"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_list_image"
            app:layout_constraintWidth_percent="0.9" />


        <EditText
            android:id="@+id/edt_full_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp5"
            android:background="@drawable/spr_bg_detail_room"
            android:gravity="top"
            android:hint="@string/hide_new_room_full_des"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:padding="@dimen/dp10"
            android:scrollHorizontally="false"
            android:textColor="@color/txt_app"
            android:textCursorDrawable="@color/txt_app"
            android:textSize="@dimen/txt_16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_sort_description"
            app:layout_constraintWidth_percent="0.9" />

        <TextView
            android:id="@+id/txt_sophong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Số phòng*"
            android:textSize="@dimen/txt_15sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_full_des"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_number_room"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_appbar"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            android:padding="@dimen/dp1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_sophong"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/icon_number_room"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/dp7"
                android:src="@drawable/icon_so_phong"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="0dp"
                android:layout_height="0dp"
                app:hintTextAppearance="@style/TextLabeTextInput"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_number_room"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_number_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:gravity="center_vertical"
                    android:hint="@string/hide_number_room"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/dp5"
                    android:singleLine="true"
                    android:textColor="@color/app_main"
                    android:textColorHint="@color/Silver"
                    android:textCursorDrawable="@color/app_main"
                    android:textSize="@dimen/txt_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_number_room"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/txt_sogiuong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Số giường ngủ*"

            android:textSize="@dimen/txt_15sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_number_room"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_number_bed"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_appbar"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_bg_detail_room"
            android:padding="@dimen/dp1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_sogiuong"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/icon_number_bed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/dp7"
                android:src="@drawable/ic_bed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:hintTextAppearance="@style/TextLabeTextInput"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_number_bed"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_number_bed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:gravity="center_vertical"
                    android:hint="@string/hide_number_bed"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="@dimen/dp5"
                    android:singleLine="true"
                    android:textColor="@color/app_main"
                    android:textColorHint="@color/Silver"
                    android:textCursorDrawable="@color/app_main"
                    android:textSize="@dimen/txt_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_number_bed"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_add_room"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_btn"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/spr_btn_login"
            android:text="TẠO PHÒNG"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_number_bed"
            app:layout_constraintWidth_percent=".75" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_add_room" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>